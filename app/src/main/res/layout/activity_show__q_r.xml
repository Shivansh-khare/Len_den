<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    tools:context=".Show_QR">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/CIV_show_qr"
        android:layout_width="85sp"
        android:layout_height="85sp"/>

    <TextView
        android:id="@+id/TV_name_show_qr"
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"/>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="30sp"
        android:layout_width="220sp"
        android:padding="0sp"
        app:cardCornerRadius="5sp"
        android:background="@color/white"
        android:layout_height="220sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/qr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="0sp"
                android:layout_centerInParent="true"
                android:layout_height="40sp"
                android:src="@mipmap/logo_new_round"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BTN_scan_showQR"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_baseline_camera_alt_24"
        android:text="  Scan QR code"
        android:padding="20sp"
        android:background="@drawable/back_button_show_qr"
        android:textSize="20sp"
        android:textColor="@color/white"
        />

</LinearLayout>